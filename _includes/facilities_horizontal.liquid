<div class="col mb-4">
  <a href="{% if facility.redirect %}{{ facility.redirect }}{% else %}{{ facility.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if facility.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=facility.img sizes="(min-width: 768px) 156px, 50vw" alt="facility thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if facility.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ facility.title }}</h3>
            <p class="card-text">{{ facility.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if facility.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ facility.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if facility.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ facility.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
